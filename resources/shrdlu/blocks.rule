[
    == commands ==
    do_pick_up(E1) :- at(E1, X, Y, Z) move_hand(X, Y, Z) grasp(E1) raise_hand();

    == inferences ==
    raise_hand() :- at(`hand`, X, Y, Z1) add(Z1, 1000, Z2) move_hand(X, Y, Z2);

    == actions ==
    move_hand(X, Y, Z) :- retract(at(`hand`, _, _, _)) assert(at(`hand`, X, Y, Z));
    grasp(X) :- retract(grasping(_)) assert(grasping(X));
]